<%- include('./partials/header.ejs')%>
            <hr>
            <form action="/connection/" method="POST" id="simple-forms">
                <div id = "labels">
                    <label>League Name</label>
                    <input type="text" id="leagueName-input" name= "leagueTitle" placeholder="Enter the League Name">
                </div>
                <div>
                    <label>Match Title</label>
                    <input type="text" id="title-input" name= "title" placeholder="Enter the Tilte">
                </div>
                <div id="inputs">
                    <label>Host</label>
                    <input type="text" id="host-input"  name= "host" placeholder="Enter Host's Name">
                </div>
                <div>
                    <label>Details</label>
                    <textarea rows="10" cols="50" name= "details" ></textarea>
                </div>
                <div>
                    <label>Where</label>
                    <input type="text" id="where-input" name= "where" placeholder="Enter the location">
                </div>
                <div>
                    <label>When</label>
                    <input type="date" data-date-inline-picker="true" id="when-input" name= "when" data-polyfill="all">
                </div>
                <div>
                    <label>Start</label>
                    <input type="text" name= "starttime" id="start-input">
                </div>
                <div>
                    <label>End</label>
                    <input type="text" name= "endtime" id="end-input">
                </div>
                <div>
                    <label>Image URL</label>
                    <input type="text" id="image-url-input" name= "imageurl" placeholder="imageURL">
                </div>
                <button type="submit" id="create--match-button">Create Match</button>
            </form>
<%- include('./partials/footer.ejs')%>